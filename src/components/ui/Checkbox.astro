---
interface Props {
	name: string
	value: string
	checked: boolean
}

const { name, value, checked } = Astro.props
---

<div class='checkbox-wrapper w-full'>
	<input
		style='display: none;'
		name={name}
		type='checkbox'
		id={`cbx ${name}`}
		class='inp-cbx w-full'
		checked={checked}
	/>
	<label for={`cbx ${name}`} class='cbx w-full'>
		<span>
			<svg viewBox='0 0 12 9' height='9px' width='12px'>
				<polyline points='1 5 4 8 11 1'></polyline>
			</svg>
		</span>
		<span class='w-full'><div class='w-full'>{value}</div></span>
	</label>
</div>

<style>
	.checkbox-wrapper .cbx {
		-webkit-user-select: none;
		user-select: none;
		-webkit-tap-highlight-color: transparent;
		cursor: pointer;
		width: 100% !important;
		display: flex;
	}

	.checkbox-wrapper .cbx span {
		display: inline-block;
		vertical-align: middle;
		transform: translate3d(0, 0, 0);
	}

	.checkbox-wrapper .cbx span:first-child {
		position: relative;
		width: 24px;
		height: 24px;
		border-radius: 10%;
		transform: scale(1);
		vertical-align: middle;
		border: 1px solid #b9b8c3;
		transition: all 0.2s ease;
	}

	.checkbox-wrapper .cbx span:first-child svg {
		position: absolute;
		z-index: 1;
		top: 8px;
		left: 6px;
		fill: none;
		stroke: white;
		stroke-width: 2;
		stroke-linecap: round;
		stroke-linejoin: round;
		stroke-dasharray: 16px;
		stroke-dashoffset: 16px;
		transition: all 0.3s ease;
		transition-delay: 0.1s;
		transform: translate3d(0, 0, 0);
	}

	.checkbox-wrapper .cbx span:first-child:before {
		content: '';
		width: 100%;
		height: 100%;
		background: rgb(250 180 64);
		display: block;
		transform: scale(0);
		opacity: 1;
		border-radius: 50%;
		transition-delay: 0.2s;
	}

	.checkbox-wrapper .cbx span div:last-child {
		margin-left: 8px;
		width: 100%;
	}

	.checkbox-wrapper .cbx:hover span:first-child {
		border-color: rgb(249 160 38);
	}

	.checkbox-wrapper .inp-cbx:checked + .cbx span:first-child {
		border-color: rgb(249 160 38);
		background: rgb(249 160 38);
		animation: check-15 0.6s ease;
	}

	.checkbox-wrapper .inp-cbx:checked + .cbx span:first-child svg {
		stroke-dashoffset: 0;
	}

	.checkbox-wrapper .inp-cbx:checked + .cbx span:first-child:before {
		transform: scale(2.2);
		opacity: 0;
		transition: all 0.6s ease;
	}

	@keyframes check-15 {
		50% {
			transform: scale(1.2);
		}
	}
</style>
