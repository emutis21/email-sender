---
import ArrowIcon from '@/icons/ArrowIcon.astro'

interface Props {
	title: string
	classes?: string
	id?: string
	href: string
}

const { title, classes, id, href } = Astro.props
---

<a href={href} id={id} class={`${classes} text-royal-blue-200 hover:text-casablanca-200`}>
	<p class={`before:content-["${title}"]`}>
		{title}
	</p>
	<ArrowIcon classes='w-4 h-4' />
</a>

<style>
	a {
		padding: 0;
		margin: 0;
		border: none;
		background: none;
		cursor: pointer;
	}

	a.disable {
		pointer-events: none;
		opacity: 0.5;
	}

	a {
		--primary-color: rgb(197 205 255);
		--hovered-color: rgb(252 213 139);
		position: relative;
		display: flex;
		font-weight: 600;
		font-size: 20px;
		gap: 0.5rem;
		align-items: center;
	}

	a p {
		margin: 0;
		position: relative;
		font-size: 20px;
		color: var(--primary-color);
	}

	a::after {
		position: absolute;
		content: '';
		width: 0;
		left: 0;
		bottom: -7px;
		background: var(--hovered-color);
		height: 2px;
		transition: 0.3s ease-out;
	}

	a p::before {
		position: absolute;
		/*   box-sizing: border-box; */
		/* content: ""; */
		width: 0%;
		inset: 0;
		color: var(--hovered-color);
		overflow: hidden;
		transition: 0.3s ease-out;
	}

	a:hover::after {
		width: 100%;
	}

	a:hover p::before {
		width: 100%;
	}

	a:hover svg {
		transform: translateX(4px);
		color: var(--hovered-color);
	}

	a svg {
		color: var(--primary-color);
		transition: 0.2s;
		position: relative;
		width: 15px;
		transition-delay: 0.2s;
	}
</style>
